{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "strict": true,
    "target": "ES2015",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "noImplicitThis": true,
    "types": ["vue/jsx"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx", 
    "src/**/*.vue",
    "shims-vue.d.ts"
  ],
  "exclude": ["node_modules", "lib", "es", "**/.*/", "src/**/test/**/*"]
} 